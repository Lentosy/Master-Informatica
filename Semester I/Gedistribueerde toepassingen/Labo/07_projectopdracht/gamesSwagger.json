{
  "swagger": "2.0",
  "info": {
    "description": "REST API for the prisoner's dilemma game",
    "version": "1.0.0",
    "title": "Prisoner's dilemma game"
  },
  "basePath": "/",
  "paths": {
    "/games": {
      "get": {
        "summary": "Get all games played",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Game"
              }
            }
          }
        }
      }
    },
    "/games/{namePlayer}": {
      "get": {
        "summary": "Get all games played by one player identified by name",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "namePlayer",
            "description": "name of the player",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Game"
              }
            }
          },
          "404": {
            "description": "No player with given name"
          }
        }
      }
    }
  },
  "definitions": {
    "Game": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "player1": {
          "$ref": "#/definitions/Player"
        },
        "player2": {
          "$ref": "#/definitions/Player"
        }
      }
    },
    "Player": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "minItems": 30
        },
        "convictions": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "minItems": 30
        }
      }
    }
  }
}